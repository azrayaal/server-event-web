<table id="example2" class="table table-bordered table-hover table-striped" style="width: 100%">
  <thead>
    <tr>
      <th style="width: 7%">No</th>
      <th>Event Name</th>
      <th>Description</th>
      <th>agency</th>
      <th>Date</th>
      <th>Status</th>
      <th style="width: 20%">Actions</th>
    </tr>
  </thead>
  <tbody>
    <% for(let i = 0; i < request.length; i++){ %>
    <tr>
      <td><%= i + 1 %></td>
      <td><%= request[i].event_name %></td>
      <td><%= request[i].description %></td>
      <td><%= request[i].agency_name %></td>
      <td><%= request[i].date %></td>
      <td class="text-center">
        <form action="/request/status/<%= request[i]._id %>?_method=PUT" method="POST">
          <button style="cursor: pointer; background: transparent; border: 0">
            <% if(request[i].status === 'accept') { %>
            <div class="btn-group">
              <div class="btn btn-success">accept</div>
            </div>
            <% } else if (request[i].status === 'decline'){%>
            <div class="btn-group">
              <div class="btn btn-danger">decline</div>
            </div>
            <% } else { %>
            <div class="btn-group">
              <div class="btn btn-warning">pending</div>
            </div>
            <% } %>
          </button>
        </form>
      </td>
      <td>
        <form action="/request/delete/<%= request[i]._id %>?_method=DELETE" method="POST">
          <a href="/request/detail/<%= request[i]._id %>" class="btn btn-warning">
            <i class="fas fa-pencil-alt"></i>
            Detail
          </a>
          <button href="" class="btn btn-danger">
            <i class="fas fa-trash-alt"></i>
            Decline
          </button>
        </form>
      </td>
    </tr>
    <% } %>
  </tbody>
</table>
