<table id="example2" class="table table-bordered table-hover table-striped" style="width: 100%">
  <thead>
    <tr>
      <th style="width: 7%">No</th>
      <th>Nama Event</th>
      <th>Deskripsi</th>
      <th>Lokasi</th>
      <th>Tanggal</th>
      <th>Status</th>
      <th style="width: 20%">Actions</th>
    </tr>
  </thead>
  <tbody>
    <% for(let i = 0; i < event.length; i++){ %>
    <tr>
      <td><%= i + 1 %></td>
      <td><%= event[i].event_name %></td>
      <td><%= event[i].description %></td>
      <td><%= event[i].location %></td>
      <td><%= event[i].date %></td>

      <td>
        <form action="/event/status/<%= event[i]._id %>?_method=PUT" method="POST">
          <button style="cursor: pointer; background: transparent; border: 0">
            <% if(event[i].status === 'Publish') { %>
            <div class="btn-group">
              <div class="btn btn-success">Publish</div>
            </div>
            <% } else if (event[i].status === 'Ended'){%>
            <div class="btn-group">
              <div class="btn btn-danger">Ended</div>
            </div>
            <% } else { %>
            <div class="btn-group">
              <div class="btn btn-warning">Hold</div>
            </div>
            <% } %>
          </button>
        </form>
      </td>
      <td>
        <form action="/event/delete/<%= event[i]._id %>?_method=DELETE" method="POST">
          <div class="btn-group btn-group-toggle" data-toggle="buttons">
            <label class="btn btn-secondary">
              <input type="radio" name="options" id="option_a1" autocomplete="off" checked />
              <a href="/event/edit/<%= event[i]._id %>" class="btn btn-warning">
                <i class="fas fa-pencil-alt"></i>
                Edit
              </a>
            </label>
            <label class="btn btn-secondary">
              <input type="radio" name="options" id="option_a2" autocomplete="off" />
              <a href="/event/detail/<%= event[i]._id %>" class="btn btn-primary">
                <i class="fas fa-book"></i>
                detail
              </a>
            </label>
            <label class="btn btn-secondary">
              <input type="radio" name="options" id="option_a3" autocomplete="off" />
              <button href="" class="btn btn-danger">
                <i class="fas fa-trash-alt"></i>
                Delete
              </button>
            </label>
          </div>
        </form>
      </td>
    </tr>
    <% } %>
  </tbody>
</table>
