<%- include ../../partials/header.ejs %> <%- include ../../partials/navbar.ejs %> <%- include ../../partials/sidebar.ejs %>

<div class="content-wrapper">
  <!-- Content Header (Page header) -->
  <section class="content-header">
    <div class="container-fluid">
      <div class="row mb-2">
        <div class="col-sm-6">
          <h1>talent</h1>
        </div>
        <div class="col-sm-6">
          <ol class="breadcrumb float-sm-right">
            <li class="breadcrumb-item"><a href="/">Home</a></li>
            <li class="breadcrumb-item"><a href="/talent">talent</a></li>
            <li class="breadcrumb-item active">Edit</li>
          </ol>
        </div>
      </div>
    </div>
    <!-- /.container-fluid -->
  </section>

  <!-- Main content -->
  <section class="content">
    <div class="container-fluid">
      <div class="row">
        <div class="col-12">
          <div class="card">
            <!-- /.card-header -->
            <div class="card-body">
              <div class="card card-primary">
                <div class="card-header">
                  <h3 class="card-title">Form edit talent "<%= talent.talent_name %>""</h3>
                </div>
                <!-- /.card-header -->
                <!-- form start -->
                <form action="/talent/edit/<%= talent._id %>?_method=PUT" method="POST" enctype="multipart/form-data">
                  <div class="card-body">
                    <!-- input gambar -->
                    <div class="form-group">
                      <label for="image">Image</label>
                      <input type="file" name="image" class="form-control" id="image" placeholder="" />
                      <br />
                      <div class="row">
                        <div class="col">
                          <h3>From</h3>
                          <img height="300px" width="300px" src="http://localhost:3000/uploads/<%= talent.talent_picture %>" alt="" />
                        </div>
                        <div class="col">
                          <h3>To</h3>
                          <img src="" id="perview" />
                        </div>
                      </div>
                    </div>
                    <!-- /.form-group -->

                    <div class="form-group">
                      <label for="name">Masukan nama talent</label>
                      <input type="text" name="talent_name" value="<%= talent.talent_name %>" class="form-control" id="exampleInputEmail1" placeholder="masukan nama talent" required />
                    </div>
                  </div>

                  <div class="card-footer">
                    <button type="submit" class="btn btn-primary"><i class="fas fa-save"></i> Simpan</button>
                    <button type="submit" class="btn btn-secondary">
                      <a href="/talent" style="color: white"><i class="fa fa-undo"></i> Cancel</a>
                    </button>
                  </div>
                </form>
              </div>
            </div>
          </div>
          <!-- /.card -->
          <!-- /.card -->
        </div>
        <!-- /.col -->
      </div>
      <!-- /.row -->
    </div>
    <!-- /.container-fluid -->
  </section>
  <!-- /.content -->
</div>

<%- include ../../partials/footer.ejs %> <%- include ../../partials/js.ejs %>

<script>
  function readUrl(input) {
    if (input.files && input.files[0]) {
      const reader = new FileReader();
      reader.onload = function (e) {
        $('#perview').attr('src', e.target.result);
        $('#perview').attr('width', '300px');
        $('#perview').attr('height', '300px');
      };
      reader.readAsDataURL(input.files[0]);
    }
  }
  $('#image').change(function () {
    readUrl(this);
  });
</script>
