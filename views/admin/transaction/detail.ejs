<%- include ../../partials/header.ejs %> 

<%- include ../../partials/navbar.ejs %> <%- include ../../partials/sidebar.ejs %>

<div class="content-wrapper">
  <!-- Content Header (Page header) -->
  <section class="content-header">
    <div class="container-fluid">
      <div class="row mb-2">
        <div class="col-sm-6">
          <h1>Transaction Detail</h1>
        </div>
        <div class="col-sm-6">
          <ol class="breadcrumb float-sm-right">
            <li class="breadcrumb-item"><a href="/">Home</a></li>
            <li class="breadcrumb-item"><a href="/transaction">transaction</a></li>
            <li class="breadcrumb-item active">Detail</li>
          </ol>
        </div>
      </div>
    </div>
    <!-- /.container-fluid -->
  </section>

  <!-- Main content -->
  <section class="content">
    <div class="container-fluid">
      <div class="row">
        <div class="col-12">
          <div class="card">
            <div class="card-body">
              <div class="card card-primary">
                <div class="card-header">
                  <h3 class="card-title">Detail event "<%= transaction.event_name %>""</h3>
                </div>

      <div class="card card-solid">
        <div class="card-body">
          <div class="row">
            <div class="col-12 col-sm-6">
              <div class="col-12">
                <h3 class="my-3"><%= transaction?.historyTicketCat?.event_name %></h3>
                <img height="300px" width="450px" src="http://localhost:3000/uploads/<%= transaction.banner %>" alt="" />
              </div>
            </div>
            <div class="col-12 col-sm-6">
              <br/>
                <div class="row">
                <div class="col-6 col-sm-6">
                  <h4 class="pt-3">OrderID: </h4>
                  <div class="btn-group btn-group-toggle" data-toggle="buttons">
                    <label class="btn btn-default text-center">
                    <%= transaction._id %>
                    </label>
                  </div>
              </div>
            </div>
                <div class="row">
                <div class="col-6 col-sm-6">
                  <h4 class="pt-3">User: </h4>
                  <div class="btn-group btn-group-toggle" data-toggle="buttons">
                    <label class="btn btn-default text-center">
                    <%= transaction.name %>
                    </label>
                  </div>
              </div>
            </div>
              <div class="row">
                <div class="col-6 col-sm-6">
                  <h4 class="pt-3">Jumlah: </h4>
                  <div class="btn-group btn-group-toggle" data-toggle="buttons">
                    <label class="btn btn-default text-center">
                    <%= transaction?.historyTicketCat?.quantity %>
                    </label>
                  </div>
              </div>
            </div>
              <div class="row">
                <div class="col-6 col-sm-6">
                  <h4 class="pt-3">Total: </h4>
                  <div class="btn-group btn-group-toggle" data-toggle="buttons">
                    <label class="btn btn-default text-center">
                    <%= transaction?.historyTicketCat?.total %>
                    </label>
                  </div>
              </div>
            </div>
          </div>
        </div>
      </div>
  <div class="card-footer">
                    <button  class="btn btn-secondary">
                      <a href="/transaction" style="color: white"><i class="fa fa-undo"></i> Back</a>
                    </button>
                  </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
</div>

<%- include ../../partials/footer.ejs %> <%- include ../../partials/js.ejs %>
<script>
  function readUrl(input) {
    if (input.files && input.files[0]) {
      const reader = new FileReader();
      reader.onload = function (e) {
        $('#perview').attr('src', e.target.result);
        $('#perview').attr('width', '450');
        $('#perview').attr('height', '300');
      };
      reader.readAsDataURL(input.files[0]);
    }
  }
  $('#image').change(function () {
    readUrl(this);
  });
</script>
