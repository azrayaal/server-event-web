<table id="example2" class="table table-bordered table-hover table-striped" style="width: 100%">
  <thead>
    <tr>
      <th style="width: 7%">No</th>
      <th>Event Name</th>
      <th>user</th>
      <th>quantity</th>
      <th>total</th>
      <th style="width: 10%">status</th>
      <th style="width: 20%">Actions</th>
    </tr>
  </thead>
  <tbody>
    <% for(let i = 0; i < transaction.length; i++){ %>
    <tr>
      <td><%= i + 1 %></td>
      <td><%= transaction[i]?.historyTicketCat?.event_name %></td>
      <td><%= transaction[i].name %></td>
      <td><%= transaction[i]?.historyTicketCat?.quantity %></td>
      <td><%= transaction[i]?.historyTicketCat?.total %></td>
      <td class="text-center">
        <form action="/transaction/status/<%= transaction[i]._id %>?_method=PUT" method="POST">
          <button style="cursor: pointer; background: transparent; border: 0">
            <% if(transaction[i].status === 'success') { %>
            <div class="btn-group">
              <div class="btn btn-success">success</div>
            </div>
            <% } else if (transaction[i].status === 'failed'){%>
            <div class="btn-group">
              <div class="btn btn-danger">failed</div>
            </div>
            <% } else { %>
            <div class="btn-group">
              <div class="btn btn-warning">pending</div>
            </div>
            <% } %>
          </button>
        </form>
      </td>
      <td>
        <form action="/transaction/delete/<%= transaction[i]._id %>?_method=DELETE" method="POST">
          <a href="/transaction/detail/<%= transaction[i]._id %>" class="btn btn-warning">
            <i class="fas fa-pencil-alt"></i>
            Detail
          </a>
          <button href="" class="btn btn-danger">
            <i class="fas fa-trash-alt"></i>
            Decline
          </button>
        </form>
      </td>
    </tr>
    <% } %>
  </tbody>
</table>
