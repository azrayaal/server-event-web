<table id="example2" class="table table-bordered table-hover table-striped" style="width: 100%">
  <thead>
    <tr>
      <th style="width: 7%">No</th>
      <th>Nama Event</th>
      <th>Deskripsi</th>
      <th>Lokasi</th>
      <th>Tanggal</th>
      <th style="width: 20%">Actions</th>
    </tr>
  </thead>
  <tbody>
    <% for(let i = 0; i < event.length; i++){ %>
    <tr>
      <td><%= i + 1 %></td>
      <td><%= event[i].event_name %></td>
      <td><%= event[i].description %></td>
      <td><%= event[i].location %></td>
      <td><%= event[i].date %></td>
      <td>
        <form action="/event/delete/<%= event[i]._id %>?_method=DELETE" method="POST">
          <a href="/event/edit/<%= event[i]._id %>" class="btn btn-warning">
            <i class="fas fa-pencil-alt"></i>
            Edit
          </a>
          <button href="" class="btn btn-danger">
            <i class="fas fa-trash-alt"></i>
            Delete
          </button>
        </form>
      </td>
    </tr>
    <% } %>
  </tbody>
</table>
