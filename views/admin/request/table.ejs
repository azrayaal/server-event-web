<table id="example2" class="table table-bordered table-hover table-striped" style="width: 100%">
  <thead>
    <tr>
      <th style="width: 7%">No</th>
      <th>Picture</th>
      <th>Nama talent</th>
      <th style="width: 20%">Actions</th>
    </tr>
  </thead>
  <tbody>
    <% for(let i = 0; i < talent.length; i++){ %>
    <tr>
      <td><%= i + 1 %></td>
      <td>
        <img width="50px" height="50px" src="http://localhost:3000/uploads/<%= talent[i].talent_picture %>" alt="" />
      </td>
      <td><%= talent[i].talent_name %></td>
      <td>
        <form action="/talent/delete/<%= talent[i]._id %>?_method=DELETE" method="POST">
          <a href="/talent/edit/<%= talent[i]._id %>" class="btn btn-warning">
            <i class="fas fa-pencil-alt"></i>
            Detail
          </a>
          <button href="" class="btn btn-danger">
            <i class="fas fa-trash-alt"></i>
            Delete
          </button>
        </form>
      </td>
    </tr>
    <% } %>
  </tbody>
</table>
