<table id="example2" class="table table-bordered table-hover table-striped" style="width: 100%">
  <thead>
    <tr>
      <th style="width: 7%">No</th>
      <th>Event Name</th>
      <th>Description</th>
      <th>Date</th>
      <th>Status</th>
      <th style="width: 20%">Actions</th>
    </tr>
  </thead>
  <tbody>
    <% for(let i = 0; i < request.length; i++){ %>
    <tr>
      <td><%= i + 1 %></td>
      <td><%= request[i].event_name %></td>
      <td><%= request[i].description %></td>
      <td><%= request[i].date %></td>
      <td><%= request[i].status %></td>
      <td>
        <form action="/request/delete/<%= request[i]._id %>?_method=DELETE" method="POST">
          <a href="/request/detail/<%= request[i]._id %>" class="btn btn-warning">
            <i class="fas fa-pencil-alt"></i>
            Detail
          </a>
          <button href="" class="btn btn-danger">
            <i class="fas fa-trash-alt"></i>
            Decline
          </button>
        </form>
      </td>
    </tr>
    <% } %>
  </tbody>
</table>
